{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "commitMessagePrefix": "chore(deps):",
  "enabledManagers": ["poetry", "github-actions"],
  "dependencyDashboard": false,
  "packageRules": [
    {
      "matchManagers": ["poetry"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    }
  ]
}
